<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="900dp"
    android:background="@drawable/democratbg"
    android:padding="15dp"
    android:id="@+id/repcontainer">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="30dp"
        android:padding="10dp"
        android:paddingTop="0dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/picture"
        android:src="@drawable/blankpic"
        android:layout_below="@+id/name"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:paddingTop="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Party, Senator/Rep"
        android:id="@+id/party"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/picture"
        android:padding="10dp"
        android:layout_below="@+id/name"
        android:gravity="top|center"
        android:textSize="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/twitter"
        android:src="@drawable/twitter"
        android:foregroundGravity="center"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_below="@+id/party"
        android:layout_toEndOf="@+id/picture"
        android:paddingLeft="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info"
        android:background="@drawable/bg_selector_info"
        android:layout_below="@+id/picture"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/twitter"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="email@email.com"
        android:id="@+id/email"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/info"
        android:layout_below="@+id/twitter"
        android:layout_margin="5dp"
        android:textSize="18dp"
        android:paddingTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="www.website.com"
        android:id="@+id/website"
        android:gravity="center"
        android:layout_below="@+id/email"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/email"
        android:layout_margin="5dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="\@someone"
        android:id="@+id/twitter1"
        android:layout_alignTop="@+id/twitter"
        android:layout_alignLeft="@+id/twitter"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="tweetweetweetwetetwetwet tweetweetweetwetetwetwet tweetweetweetwetetwetwet"
        android:id="@+id/twitter2"
        android:layout_below="@+id/twitter1"
        android:layout_alignLeft="@+id/twitter1"
        android:paddingRight="10dp" />
</RelativeLayout>